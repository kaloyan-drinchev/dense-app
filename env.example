# Supabase Configuration
# Get these from your Supabase project dashboard
SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_ANON_KEY=your-anon-key-here

# IMPORTANT: Service role key should NEVER be committed or exposed in client code
# Only used for migration scripts and admin operations
# Get this from Supabase Dashboard → Settings → API → service_role key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Database URL for direct postgres connection (for migrations)
# Format: postgresql://postgres:[password]@db.[project].supabase.co:5432/postgres
DATABASE_URL=postgresql://postgres:your-password@db.your-project.supabase.co:5432/postgres

# RevenueCat Configuration
# Copy this to .env when ready to configure RevenueCat
# Get these keys from RevenueCat Dashboard after setting up your Apple Developer account

# iOS API Key (starts with "appl_")
EXPO_PUBLIC_REVENUECAT_IOS_API_KEY=YOUR_IOS_API_KEY_HERE

# Android API Key (starts with "goog_") - for future use
EXPO_PUBLIC_REVENUECAT_ANDROID_API_KEY=YOUR_ANDROID_API_KEY_HERE

# Development settings
EXPO_PUBLIC_DEV_MODE=true
EXPO_PUBLIC_FORCE_LEGACY_SUBSCRIPTIONS=false

